<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/location_card_location1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:text="032" />

    <TextView
        android:id="@+id/location_card_location2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/location_card_location1"
        tools:text="06" />

    <TextView
        android:id="@+id/location_card_location3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/location_card_location2"
        tools:text="B06" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/location_card_location1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/location_card_upc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPC:" />

        <TextView
            android:id="@+id/location_card_upc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="012912101219" />

        <TextView
            android:id="@+id/location_card_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="DESC:" />

        <TextView
            android:id="@+id/location_card_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="CUPCAKES MINI PARVE" />

        <TextView
            android:id="@+id/location_card_pack_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PACK SIZE:" />

        <TextView
            android:id="@+id/location_card_pack_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1 CS/13" />
    </LinearLayout>

</RelativeLayout>