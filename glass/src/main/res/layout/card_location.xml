<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/location_card_aisle"
        android:textColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="45sp"
        android:paddingBottom="3dp"
        tools:text="032" />

    <TextView
        android:id="@+id/location_card_slot"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="4sp"
        android:textSize="45sp"
        android:paddingBottom="3dp"
        android:layout_toEndOf="@id/location_card_aisle"
        tools:text="06" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/location_card_slot"
        android:orientation="vertical">


        <TextView
            android:id="@+id/location_card_upc_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/oculogx_light_blue"
            android:textSize="10sp"
            android:text="UPC:" />

        <TextView
            android:id="@+id/location_card_upc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="16sp"
            android:paddingBottom="3dp"
            tools:text="012912101219" />

        <TextView
            android:id="@+id/location_card_description_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/oculogx_light_blue"
            android:textSize="10sp"
            tools:text="DESC:" />

        <TextView
            android:id="@+id/location_card_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:paddingBottom="3dp"
            tools:text="" />

        <TextView
            android:id="@+id/location_card_pack_size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/oculogx_light_blue"
            android:textSize="10sp"
            android:text="PACK SIZE:" />

        <TextView
            android:id="@+id/location_card_pack_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:paddingBottom="3dp"
            tools:text="" />
    </LinearLayout>

</RelativeLayout>